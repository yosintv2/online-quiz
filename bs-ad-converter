    <script>
        // Nepali months for display
        const nepaliMonths = ["Baisakh", "Jestha", "Ashadh", "Shrawan", "Bhadra", "Ashwin", "Kartik", "Mangsir", "Poush", "Magh", "Falgun", "Chaitra"];
        const englishMonths = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
        const daysOfWeek = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

        // BS to AD conversion data (approximate, based on 56 years, 8 months, 15 days difference)
        const bsToAdDiff = { years: 56, months: 8, days: 15 };
        const bsMonthsDays = [31, 31, 32, 31, 31, 30, 30, 29, 30, 29, 30, 30]; // Typical BS month lengths
        const adLeapYear = year => (year % 4 === 0 && year % 100 !== 0) || (year % 400 === 0);
        const adMonthsDays = [31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31];

        function getDaysInADMonth(year, month) {
            return month === 2 && adLeapYear(year) ? 29 : adMonthsDays[month - 1];
        }

        function validateDate(year, month, day, isBS) {
            if (!Number.isInteger(year) || !Number.isInteger(month) || !Number.isInteger(day)) return false;
            if (isBS) {
                if (year < 1970 || year > 2100 || month < 1 || month > 12 || day < 1 || day > bsMonthsDays[month - 1]) return false;
            } else {
                if (year < 1913 || year > 2043 || month < 1 || month > 12 || day < 1 || day > getDaysInADMonth(year, month)) return false;
            }
            return true;
        }

        function bsToAd(year, month, day) {
            // Convert BS date to approximate AD date
            let adYear = year - bsToAdDiff.years;
            let adMonth = month - bsToAdDiff.months;
            let adDay = day - bsToAdDiff.days;

            // Adjust for negative or overflow
            while (adDay <= 0) {
                adMonth--;
                if (adMonth <= 0) {
                    adMonth += 12;
                    adYear--;
                }
                adDay += getDaysInADMonth(adYear, adMonth);
            }
            while (adDay > getDaysInADMonth(adYear, adMonth)) {
                adDay -= getDaysInADMonth(adYear, adMonth);
                adMonth++;
                if (adMonth > 12) {
                    adMonth -= 12;
                    adYear++;
                }
            }
            if (adMonth <= 0) {
                adMonth += 12;
                adYear--;
            }

            // Validate AD date
            if (!validateDate(adYear, adMonth, adDay, false)) return null;

            // Calculate day of the week
            const date = new Date(adYear, adMonth - 1, adDay);
            const dayOfWeek = daysOfWeek[date.getDay()];
            return { year: adYear, month: adMonth, day: adDay, dayOfWeek };
        }

        function adToBs(year, month, day) {
            // Convert AD date to approximate BS date
            let bsYear = year + bsToAdDiff.years;
            let bsMonth = month + bsToAdDiff.months;
            let bsDay = day + bsToAdDiff.days;

            // Adjust for overflow
            while (bsDay > bsMonthsDays[bsMonth - 1]) {
                bsDay -= bsMonthsDays[bsMonth - 1];
                bsMonth++;
                if (bsMonth > 12) {
                    bsMonth -= 12;
                    bsYear++;
                }
            }
            if (bsMonth > 12) {
                bsMonth -= 12;
                bsYear++;
            }

            // Validate BS date
            if (!validateDate(bsYear, bsMonth, bsDay, true)) return null;

            // Calculate day of the week
            const date = new Date(year, month - 1, day);
            const dayOfWeek = daysOfWeek[date.getDay()];
            return { year: bsYear, month: bsMonth, day: bsDay, dayOfWeek };
        }

        function formatDate(year, month, day, dayOfWeek, isBS) {
            const monthName = isBS ? nepaliMonths[month - 1] : englishMonths[month - 1];
            return `${year} ${monthName} ${day < 10 ? '0' + day : day}, ${dayOfWeek}`;
        }

        function convertDate() {
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.classList.add('hidden');
            const conversionType = document.getElementById('conversion-type').value;
            const year = parseInt(document.getElementById('input-year').value);
            const month = parseInt(document.getElementById('input-month').value);
            const day = parseInt(document.getElementById('input-day').value);

            try {
                if (!validateDate(year, month, day, conversionType === 'bs_to_ad')) {
                    throw new Error('Invalid date');
                }

                let result;
                if (conversionType === 'bs_to_ad') {
                    result = bsToAd(year, month, day);
                    if (!result) throw new Error('Invalid BS date');
                    document.getElementById('output-date').value = formatDate(result.year, result.month, result.day, result.dayOfWeek, false);
                } else {
                    result = adToBs(year, month, day);
                    if (!result) throw new Error('Invalid AD date');
                    document.getElementById('output-date').value = formatDate(result.year, result.month, result.day, result.dayOfWeek, true);
                }
            } catch (e) {
                document.getElementById('output-date').value = '';
                errorMessage.textContent = 'Error: Invalid date. Please check your input (BS: 1970-2100, AD: 1913-2043).';
                errorMessage.classList.remove('hidden');
            }
        }

        function showPopup() {
            const popup = document.createElement('div');
            popup.className = 'copy-popup';
            popup.textContent = 'Copied!';
            document.body.appendChild(popup);
            setTimeout(() => popup.classList.add('show'), 10);
            setTimeout(() => {
                popup.classList.remove('show');
                setTimeout(() => popup.remove(), 300);
            }, 2000);
        }

        function clearInput() {
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.classList.add('hidden');
            document.getElementById('input-year').value = '';
            document.getElementById('input-month').value = '1';
            document.getElementById('input-day').value = '';
            document.getElementById('output-date').value = '';
            document.getElementById('input-year').focus();
        }

        let liveConversion = true;
        function convertLive() {
            if (document.getElementById('input-year').value && document.getElementById('input-month').value && document.getElementById('input-day').value) {
                convertDate();
            }
        }

        document.getElementById('convertBtn').addEventListener('click', convertDate);
        document.getElementById('clearBtn').addEventListener('click', clearInput);
        document.getElementById('copyBtn').addEventListener('click', () => {
            const result = document.getElementById('output-date').value;
            if (result) {
                navigator.clipboard.writeText(result).then(() => {
                    showPopup();
                }).catch(() => {
                    document.getElementById('errorMessage').textContent = 'Error: Failed to copy text';
                    document.getElementById('errorMessage').classList.remove('hidden');
                });
            } else {
                document.getElementById('errorMessage').textContent = 'Error: No text available to copy';
                document.getElementById('errorMessage').classList.remove('hidden');
            }
        });

        document.getElementById('input-year').addEventListener('input', convertLive);
        document.getElementById('input-month').addEventListener('change', convertLive);
        document.getElementById('input-day').addEventListener('input', convertLive);
        document.getElementById('conversion-type').addEventListener('change', convertLive);

        document.getElementById('input-year').focus();
    </script>
</body>
